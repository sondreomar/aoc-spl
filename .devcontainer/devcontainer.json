{
    "name": "advent-of-code-spl",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "postCreateCommand": "bash .devcontainer/post_create.sh",
    "postAttachCommand": ".venv/bin/python app/bin/render_app.py",
    "mounts": [
        "source=${localWorkspaceFolder}/app,target=/opt/splunk/etc/apps/advent-of-code,type=bind,consistency=cached",
        "source=${localEnv:HOME}/.config/gh,target=/tmp/gh-config-host,type=bind,readonly"
    ],
    "features": {
        "ghcr.io/devcontainers/features/github-cli": {}
    },
    "customizations": {
        "vscode": {
            "settings": {
                "[splunk_search]": {
                    "editor.autoIndent": "advanced",
                    "editor.insertSpaces": true,
                    "editor.tabSize": 2,
                    "files.insertFinalNewline": true
                },
                "[splunk]": {
                    "editor.autoIndent": "full",
                    "editor.insertSpaces": true,
                    "editor.tabSize": 2
                },
                "python.defaultInterpreterPath": "/.venv/bin/python3",
                "ruff.interpreter": [
                    "/.venv/bin/python3"
                ],
                "splunk.spec.FilePath": "/opt/splunk/etc/system/README/",
                "splunk.commands.splunkRestUrl": "https://localhost:8089",
                "splunk.commands.enableCertificateVerification": false,
                "terminal.integrated.fontFamily": "MesloLGS NF"
            },
            "extensions": [
                "ms-azuretools.vscode-docker",
                "Splunk.splunk",
                "arcsector.vscode-splunk-search-syntax",
                "ms-python.python",
                "ms-python.vscode-pylance",
                "charliermarsh.ruff",
                "wholroyd.jinja",
                "GitHub.copilot",
                "GitHub.copilot-chat"
            ]
        }
    }
}