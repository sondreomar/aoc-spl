| inputaoc 2024-07.txt
| rex "^(?<target>\d+):(?<y>.*)"
| eval
    x = target,
    y = split(trim(y), " "),
    i = mvrange(1, mvcount(y) + 1)
| foreach mode=multivalue i [
    | eval
        i = '<<ITEM>>',
        last = mvindex(y, i * -1),
        add = mvmap(x, x - last),
        mul = mvmap(x, x / last),
        x = mvappend(add, mul),
        x = mvfilter(isint(x) and x >= 0)
]
| table input target x y
| eval result = max(mvmap(y, if("0" in (x), target, 0)))
| stats sum(result)
